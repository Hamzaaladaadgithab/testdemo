@model IEnumerable<Item>

@{
    ViewData["Title"] = "Index";
} 

  


<h1>Items Views...</h1>

<div class="container p-3">

  <partial name ="_Notifications" /> 



    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Items view</h2>
        </div>
        <div class="col-6 text-end">
            <!-- Buraya istersen buton ekleyebilirsin -->  

            <a asp-controller="Items" asp-action="New" class="btn  btn-primary">
                <i class="bi bi-plus"></i>  &nbsp;  Add New Item

            </a>
        </div>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Item Name</th>
                <th scope="col">Item Price</th>  
                <th scope="col">Category</th>
                <th scope="col">Image</th>

                <th scope="col">

                </th> 
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-primary">
                    <td scope="row" width="30%">
                        @item.Name
                    </td>
                    <td width="20%">
                        @item.price
                    </td>  
                     <td width="30%">
						@item.Category.Name
                     </td> 

                     <td> 

                         <img src="~/images/@item.imagePath"  style="width:48px " class="img-thumbnail"/>
                     </td>
                    <td> 
  <a asp-controller="Items" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-sm  btn-success">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                &nbsp;

                        <a asp-controller="Items" asp-action="Delete" asp-route-Id="@item.Id" class="btn  btn-sm btn-danger">
                            <i class="bi bi-trash3"></i>   
                        </a> 

                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
