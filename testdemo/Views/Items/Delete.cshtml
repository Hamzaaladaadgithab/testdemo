@model Item

@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="DeleteItem">

    <input asp-for="Id"  hidden></input>


    <div class="border p-3 mt-4">

        <div class="row pb-2">
            <h2 class="text-primary">Delete Item</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" disabled  class="form-control" />
            
        </div>

        <div class="mb-3">
            <label asp-for="price" class="form-label"></label>
            <input asp-for="price"  disabled class="form-control" />
          
        </div>   


        <div> 
            <label asp-for="CategoryId"></label> 
           
                <select asp-for="CategoryId" class="form-control"  asp-items="@ViewBag.CategoryList">
                </select>

        </div> 
        <br/> 
        <hr/>

        <button type="submit" class="btn btn-primary" style="width: 150px">Delete</button>
        <a asp-action="Index" asp-controller="Items" class="btn btn-secondary" style="width:150px">
            back to Items
        </a>
    </div>
</form>
